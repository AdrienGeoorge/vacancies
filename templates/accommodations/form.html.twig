{% extends 'trip/base.html.twig' %}

{% block bodyTrip %}
    {{ form_start(form) }}
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
        <div class="col-1 flex flex-col gap-4">
            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-6 px-8">
                <div class="text-2xl font-poppins-semi-bold">
                    Nom du logement
                </div>
                <div class="mb-5 text-sm font-poppins">
                    Renseignes le nom de l'hôtel, de la résidence, ou du Airbnb par exemple...
                </div>
                {{ form_widget(form.name) }}
            </div>

            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-6 px-8">
                <div class="text-2xl font-poppins-semi-bold">
                    Où se situe-t'il ?
                </div>
                <div class="mb-5 text-sm font-poppins">
                    Renseigne l'adresse du logement.
                </div>
                <div class="flex flex-col md:flew-row gap-4">
                    {{ form_widget(form.address) }}
                    {{ form_widget(form.zipCode) }}
                    {{ form_widget(form.city) }}
                    {{ form_widget(form.country) }}
                </div>
            </div>

            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-6 px-8">
                <div class="text-2xl font-poppins-semi-bold">
                    Dates de séjour
                </div>
                <div class="mb-5 text-sm font-poppins">
                    A quelles dates séjournes-t-on dans ce logement?<br>
                    <span class="font-bold">Tu ne sais pas encore les dates ? Pas de souci, tu peux laisser les champs vide.</span>
                </div>
                <div class="flex flex-col md:flew-row gap-4">
                    {{ form_widget(form.arrivalDate) }}
                    {{ form_widget(form.departureDate) }}
                </div>
            </div>
        </div>

        <div class="col-2 flex flex-col gap-4">
            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-6 px-8">
                <div class="text-2xl font-poppins-semi-bold">
                    Description de l'offre
                </div>
                <div class="mb-5 text-sm font-poppins">
                    Renseignes les formalités sur le logement.
                </div>
                {{ form_widget(form.description) }}
            </div>

            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-6 px-8">
                <div class="text-2xl font-poppins-semi-bold">
                    Informations tarifaires
                </div>
                <div class="mb-5 text-sm font-poppins">
                    Renseignes le prix <b>total</b> du logement. Y a-t-il une caution à déposer à l'arrivée sur place ?
                </div>
                <div class="flex flex-col md:flew-row gap-4">
                    {{ form_widget(form.price) }}
                    {{ form_widget(form.deposit) }}
                </div>
            </div>

            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-6 px-8">
                <div class="text-2xl font-poppins-semi-bold">
                    Dépenses additionnelles
                </div>
                <div class="mb-5 text-sm font-poppins">
                    Avez-vous fait des dépenses supplémentaires (comme une arrivée anticipée, un départ tardif...) ?
                </div>

                <div class="additionalExpensive"
                     data-index="{{ form.additionalExpensive|length > 0 ? form.additionalExpensive|last.vars.name + 1 : 0 }}"
                     data-prototype="{{ form_widget(form.additionalExpensive.vars.prototype)|e('html_attr') }}">
                    {% for key, additionalExpensive in form.additionalExpensive %}
                        <div class="row">
                            <div class="text-lg font-poppins-semi-bold mb-4">Dépense n°{{ key + 1 }}</div>
                            {{ form_widget(additionalExpensive.name) }}
                            {{ form_widget(additionalExpensive.price) }}
                        </div>
                    {% endfor %}
                </div>

                <button type="button" data-collection-holder-class="additionalExpensive"
                        class="add_item_link tracking-wide bg-teal-500 border-2 border-teal-400 text-white py-2 px-5 rounded-full w-fit m-auto mt-2
                        flex items-center justify-center hover:bg-teal-700 transition-all duration-300 ease-in-out
                        focus:shadow-outline focus:outline-none">
                    Ajouter une dépense
                </button>
            </div>

            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-6 px-8">
                <div class="text-2xl font-poppins-semi-bold">
                    Réservation
                </div>
                <div class="flex gap-4 items-center">
                    <div class="flex-1">
                        <div class="text-sm font-poppins">
                            Cochez la case ci-contre si vous avez déjà effectué la réservation de ce logement.
                        </div>
                    </div>
                    {{ form_widget(form.booked) }}
                </div>

                <div class="mb-5 text-sm font-poppins mt-4 font-bold">
                    Qui est à l'origine du paiement de cette dépense ?
                </div>
                <div class="flex flex-col md:flew-row gap-4">
                    {{ form_widget(form.payedBy) }}
                </div>
            </div>

            <div class="flex gap-4 flex-wrap justify-center">
                <button class="tracking-wide bg-teal-500 border-2 border-teal-400 text-white py-4 px-7 rounded-full
                                    flex items-center justify-center hover:bg-teal-700
                                    transition-all duration-300 ease-in-out
                                    focus:shadow-outline focus:outline-none">
                    Enregistrer
                </button>
                {% if accommodation.id %}
                    <a href="{{ path('trip_accommodations_delete', {'trip': trip.id, 'accommodation': accommodation.id}) }}"
                       class="tracking-wide bg-red-500 border-2 border-red-400 text-white py-4 px-7 rounded-full
                                    flex items-center justify-center hover:bg-red-700
                                    transition-all duration-300 ease-in-out
                                    focus:shadow-outline focus:outline-none">
                        Supprimer
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('accommodationForm') }}
    {{ encore_entry_script_tags('accommodationAdditionalExpensive') }}
{% endblock %}