{% extends 'trip/base.html.twig' %}

{% block bodyTrip %}
    {{ form_start(form) }}
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 px-4 md:px-8">
        <div class="col-1 flex flex-col gap-4">
            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-6 px-8">
                <div class="text-2xl font-poppins-semi-bold">
                    Nom de l'activité
                </div>
                <div class="mb-5 text-sm font-poppins">
                    Quelle activité allez-vous faire ?
                </div>
                {{ form_widget(form.name) }}
            </div>

            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-6 px-8">
                <div class="text-2xl font-poppins-semi-bold">
                    Date et heure
                </div>
                <div class="mb-5 text-sm font-poppins">
                    Quand allez-vous faire cette activité?<br>
                    <p class="font-bold">1. Tu ne sais pas encore la date ? Pas de souci, tu peux laisser le champs
                        vide.</p>
                    <p class="font-bold">2. S'il s'agit d'un bundle d'activité (comme un City Pass), la date n'est pas
                        nécessaire.</p>
                </div>
                <div class="flex flex-col md:flew-row gap-4">
                    {{ form_widget(form.date) }}
                </div>
            </div>
        </div>

        <div class="col-2 flex flex-col gap-4">
            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-6 px-8">
                <div class="text-2xl font-poppins-semi-bold">
                    Description de l'offre
                </div>
                <div class="mb-5 text-sm font-poppins">
                    Renseignes les formalités sur l'activité.<br>
                </div>
                {{ form_widget(form.description) }}
            </div>

            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-6 px-8">
                <div class="text-2xl font-poppins-semi-bold">
                    Informations tarifaires
                </div>
                <div class="mb-5 text-sm font-poppins">
                    Renseignes le prix de l'activité. Par défaut le prix saisi correspond au montant total.
                </div>
                <div class="flex flex-col md:flew-row gap-4">
                    {{ form_widget(form.price) }}
                </div>

                <div class="flex gap-4 mt-4 items-center">
                    <div class="flex-1">
                        <div class="text-sm font-poppins">
                            Cochez la case ci-contre si le prix de cette activité est <b>par personne</b>.
                        </div>
                    </div>
                    {{ form_widget(form.perPerson) }}
                </div>
            </div>

            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-6 px-8">
                <div class="text-2xl font-poppins-semi-bold">
                    Réservation
                </div>
                <div class="flex gap-4 items-center">
                    <div class="flex-1">
                        <div class="text-sm font-poppins">
                            Cochez la case ci-contre si vous avez déjà effectué la réservation de cette activité.
                        </div>
                    </div>
                    {{ form_widget(form.booked) }}
                </div>
            </div>

            <div class="flex gap-4 flex-wrap justify-center">
                <button class="tracking-wide bg-teal-500 border-2 border-teal-400 text-white py-4 px-7 rounded-full
                                    flex items-center justify-center hover:bg-teal-700
                                    transition-all duration-300 ease-in-out
                                    focus:shadow-outline focus:outline-none">
                    Enregistrer
                </button>
                {% if activity.id %}
                    <a href="{{ path('trip_activities_delete', {'trip': trip.id, 'activity': activity.id}) }}"
                       class="tracking-wide bg-red-500 border-2 border-red-400 text-white py-4 px-7 rounded-full
                                    flex items-center justify-center hover:bg-red-700
                                    transition-all duration-300 ease-in-out
                                    focus:shadow-outline focus:outline-none">
                        Supprimer
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
{% endblock %}