{% extends 'trip/base.html.twig' %}

{% block bodyTrip %}
    <div class="grid grid-cols-4 gap-4">
        <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-3.5 px-6 col-span-4 md:col-span-3">
            <div class="mb-2 flex flex-row items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                    <path fill-rule="evenodd"
                          d="M1.5 6.375c0-1.036.84-1.875 1.875-1.875h17.25c1.035 0 1.875.84 1.875 1.875v3.026a.75.75 0 0 1-.375.65 2.249 2.249 0 0 0 0 3.898.75.75 0 0 1 .375.65v3.026c0 1.035-.84 1.875-1.875 1.875H3.375A1.875 1.875 0 0 1 1.5 17.625v-3.026a.75.75 0 0 1 .374-.65 2.249 2.249 0 0 0 0-3.898.75.75 0 0 1-.374-.65V6.375Zm15-1.125a.75.75 0 0 1 .75.75v.75a.75.75 0 0 1-1.5 0V6a.75.75 0 0 1 .75-.75Zm.75 4.5a.75.75 0 0 0-1.5 0v.75a.75.75 0 0 0 1.5 0v-.75Zm-.75 3a.75.75 0 0 1 .75.75v.75a.75.75 0 0 1-1.5 0v-.75a.75.75 0 0 1 .75-.75Zm.75 4.5a.75.75 0 0 0-1.5 0V18a.75.75 0 0 0 1.5 0v-.75ZM6 12a.75.75 0 0 1 .75-.75H12a.75.75 0 0 1 0 1.5H6.75A.75.75 0 0 1 6 12Zm.75 2.25a.75.75 0 0 0 0 1.5h3a.75.75 0 0 0 0-1.5h-3Z"
                          clip-rule="evenodd"></path>
                </svg>
                <div class="font-poppins-semi-bold text-xl">Détails des activités</div>
            </div>
            <div class="text-sm">Retrouvez les activités prévues lors de votre séjour. Seul les activités notifiées
                comme
                réservées seront incluses dans le calcul des dépenses.
            </div>
        </div>

        <a href="{{ path('trip_activities_new', {'trip': trip.id}) }}" class="shadow rounded-3xl py-3.5 px-6 flex flex-col gap-2 items-center justify-center text-center
                          col-span-4 md:col-span-1
                          tracking-wide bg-teal-500 text-white
                                    border border-teal-300 hover:bg-teal-600
                                    transition-all duration-300 ease-in-out focus:shadow-outline focus:outline-none">
            <span class="bg-teal-400 rounded-full p-1">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                    <path fill-rule="evenodd"
                          d="M12 3.75a.75.75 0 0 1 .75.75v6.75h6.75a.75.75 0 0 1 0 1.5h-6.75v6.75a.75.75 0 0 1-1.5 0v-6.75H4.5a.75.75 0 0 1 0-1.5h6.75V4.5a.75.75 0 0 1 .75-.75Z"
                          clip-rule="evenodd"></path>
                </svg>
            </span>
            <span>Nouvelle activité</span>
        </a>
    </div>

    <div class="mt-4">
        {% if not trip.activities.empty %}
            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4 mt-4">
                {% for activity in trip.activities|sort((a, b) => a.date > b.date) %}
                    <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-3.5 px-6 flex flex-col justify-between">
                        <div class="infos">
                            <div class="font-poppins-semi-bold text-xl">{{ activity.name }}</div>

                            {% if activity.date %}
                                <div class="mt-4">
                                    <div class="font-poppins-semi-bold">Date et heure</div>
                                    <div class="block">Le {{ activity.date|date('d/m/Y à H:i') }}</div>
                                </div>
                            {% endif %}

                            {% if activity.description %}
                                <div class="mt-4">
                                    <div class="font-poppins-semi-bold">Description de l'offre</div>
                                    <span class="line-clamp-5">{{ activity.description|nl2br }}</span>
                                </div>
                            {% endif %}

                            <div class="mt-4">
                                <div class="font-poppins-semi-bold">Prix de l'activité</div>
                                <span class="block">{{ activity.price }}€ {% if activity.perPerson %}par personne{% endif %}</span>
                            </div>
                        </div>

                        {% if activity.isBooked and activity.payedBy %}
                            <div class="mt-4">
                                <div class="font-poppins-semi-bold">Payé par</div>
                                <span class="block">{{ activity.payedBy.name }}</span>
                            </div>
                        {% endif %}

                        <div class="footer">
                            <div class="mt-4 flex flex-row flex-wrap gap-2 justify-center items-center">
                                <div class="rounded-full bg-body dark:bg-body-dark w-fit px-3 py-1">
                                    TOTAL <span
                                            class="font-bold">{{ activity.perPerson ? activity.price * trip.tripTravelers.count : activity.price }}€</span>
                                </div>

                                <div class="rounded-full {{ activity.isBooked ? 'bg-green-400' : 'bg-red-400' }} w-fit text-white px-3 py-1">
                                    {{ activity.isBooked ? 'Réservé' : 'Non réservé' }}
                                </div>
                            </div>

                            <a href="{{ path('trip_activities_edit', {'trip': trip.id, 'activity': activity.id}) }}"
                               class="block mt-4 bg-blue-500 border-2 border-blue-400 text-white text-center py-2 px-5 rounded-full">Editer</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="shadow rounded-3xl bg-red-400 text-white py-3.5 px-6">
                Aucune activité n'a été trouvée pour ce voyage.
            </div>
        {% endif %}
    </div>
{% endblock %}