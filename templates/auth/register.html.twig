{% extends 'base.html.twig' %}

{% block title %}{{ app_name }} - Inscription{% endblock %}

{% block body %}
    <div class="lg:bg-body dark:bg-body-dark flex items-center justify-center h-full">
        {{ form_start(registrationForm, {'attr': {
            'class': 'text-gray-900 flex justify-center sm:items-center
                dark:text-white w-full lg:w-10/12 xl:w-9/12'
        }}) }}
        <div class="w-full max-w-screen-lg m-0 lg:m-10 lg:h-auto lg:shadow lg:rounded-5xl overflow-hidden flex justify-center lg:flex-1 flex-none
                   lg:bg-box dark:lg:bg-box-dark">
            <div class="lg:w-3/6 xl:w-6/12 p-6 sm:px-8 lg:py-5 flex lg:flex-none items-center">
                <div class="flex flex-col px-10">
                    <h1 class="mt-12 mb-5 text-xl font-poppins-semi-bold">
                        Bienvenue sur <span class="text-teal-500">{{ app_name }}</span>
                    </h1>
                    <h1 class="text-3xl font-playfair">
                        Créez votre compte
                    </h1>
                    <div class="w-full flex-1 mt-5">
                        {% if not registrationForm.vars.valid %}
                            <div class="relative block w-full py-4 px-6 mb-4 text-base leading-5 text-white bg-red-400 rounded-2xl opacity-100 font-regular">
                                <ul>
                                    {% for child in registrationForm.children %}
                                        {% for error in child.vars.errors %}
                                            <li>{{ error.message }}</li>
                                        {% endfor %}
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}
                        <div>{{ form_widget(registrationForm.email) }}</div>
                        <div>{{ form_widget(registrationForm.plainPassword) }}</div>
                        <button
                                class="mt-5 tracking-wide bg-teal-500 text-white w-full py-4 rounded-full
                                    flex items-center justify-center hover:bg-teal-700
                                    transition-all duration-300 ease-in-out
                                    focus:shadow-outline focus:outline-none">
                            S'inscrire
                        </button>
                        <p class="mt-6 mb-10 text-sm text-gray-600 text-center dark:text-gray-200">
                            Vous avez déjà un compte? Connectez-vous
                            <a href="{{ path('auth_login') }}" class="border-b border-gray-500 border-dotted">
                                en cliquant ici
                            </a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="flex-1 text-center hidden lg:flex">
                <div class="w-full bg-contain bg-center bg-no-repeat mr-14 my-8"
                     style="background-image: url({{ asset('build/images/index.png') }});">
                </div>
            </div>
        </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}