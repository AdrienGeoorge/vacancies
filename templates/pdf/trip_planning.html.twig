{# templates/pdf/trip_planning.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Planning - {{ trip.name }}</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        @page {
            margin: 15mm 10mm 20mm 10mm;
        }
        
        body {
            font-family: 'DejaVu Sans', Arial, sans-serif;
            color: #1a1a1a;
            font-size: 11pt;
            line-height: 1.5;
        }
        
        /* Header avec logo */
        .page-header {
            position: fixed;
            top: -10mm;
            left: 0;
            right: 0;
            height: 12mm;
            display: flex;
            align-items: center;
            padding: 0 10mm;
            border-bottom: 1px solid #e5e7eb;
        }
        
        .logo-container {
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .logo {
            width: 28px;
            height: 28px;
        }
        
        .app-name {
            font-size: 16pt;
            font-weight: 700;
            color: #2563eb;
        }
        
        /* Footer */
        .page-footer {
            position: fixed;
            bottom: -15mm;
            left: 0;
            right: 0;
            height: 10mm;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 10mm;
            border-top: 1px solid #e5e7eb;
            font-size: 9pt;
            color: #6b7280;
        }
        
        /* Content */
        .content {
            padding-top: 5mm;
        }
        
        .page-title {
            font-size: 28pt;
            font-weight: 700;
            color: #1a1a1a;
            text-align: center;
            margin-bottom: 5mm;
        }
        
        .page-subtitle {
            font-size: 14pt;
            color: #6b7280;
            text-align: center;
            margin-bottom: 10mm;
        }
        
        /* Planning */
        .planning-day {
            margin-bottom: 10mm;
            page-break-inside: avoid;
        }
        
        .day-header {
            font-size: 14pt;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 5mm;
            padding: 5px 10px;
            background: #f3f4f6;
            border-radius: 6px;
        }
        
        .event-card {
            background: #f9fafb;
            padding: 10px 15px;
            margin-bottom: 5mm;
            border-radius: 6px;
            border-left: 4px solid #3b82f6;
        }
        
        .event-time-title {
            font-size: 12pt;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 3px;
        }
        
        .event-time {
            color: #2563eb;
        }
        
        .event-category {
            font-size: 9pt;
            color: #6b7280;
            font-style: italic;
            margin-bottom: 5px;
        }
        
        .event-description {
            font-size: 10pt;
            color: #4b5563;
        }
    </style>
</head>
<body>
    {# Header #}
    <div class="page-header">
        <div class="logo-container">
            {% if logoPath %}
                <img src="{{ logoPath }}" alt="Vacancies" class="logo">
            {% else %}
                <span style="font-size: 28px;">üèñÔ∏è</span>
            {% endif %}
            <span class="app-name">Vacancies</span>
        </div>
    </div>
    
    {# Footer #}
    <div class="page-footer">
        <span>G√©n√©r√© le {{ generatedAt|date('d/m/Y √† H:i') }}</span>
        <span>Page <span class="pagenum"></span></span>
    </div>
    
    {# Content #}
    <div class="content">
        <h1 class="page-title">Planning : {{ trip.name }}</h1>
        <p class="page-subtitle">
            Du {{ trip.startDate|date('d/m/Y') }} au {{ trip.endDate|date('d/m/Y') }}
        </p>
        
        {% if trip.planning %}
            {% for day in trip.planning %}
                <div class="planning-day">
                    <h3 class="day-header">
                        {{ day.date|date('l d F Y') }}
                    </h3>
                    
                    {% for event in day.events %}
                        <div class="event-card">
                            <div class="event-time-title">
                                <span class="event-time">{{ event.time }}</span> - {{ event.title }}
                            </div>
                            <div class="event-category">
                                {{ event.category }}
                                {% if event.duration %}
                                    ‚Ä¢ {{ event.duration }}
                                {% endif %}
                            </div>
                            {% if event.description %}
                                <div class="event-description">
                                    {{ event.description }}
                                </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        {% else %}
            <p style="text-align: center; color: #6b7280; margin-top: 50mm;">
                Aucune activit√© planifi√©e pour ce voyage.
            </p>
        {% endif %}
    </div>
    
    {# Script pour num√©rotation #}
    <script type="text/php">
        if (isset($pdf)) {
            $font = $fontMetrics->getFont("DejaVu Sans");
            $size = 9;
            $pageText = $PAGE_NUM;
            $y = 820;
            $x = 520;
            $pdf->text($x, $y, $pageText, $font, $size);
        }
    </script>
</body>
</html>
