{% extends 'trip/base.html.twig' %}

{% block bodyTrip %}
    <div class="grid grid-cols-4 gap-4">
        <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-3.5 px-6 col-span-3">
            <div class="mb-2 flex flex-row items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                    <path fill-rule="evenodd"
                          d="M4.5 2.25a.75.75 0 0 0 0 1.5v16.5h-.75a.75.75 0 0 0 0 1.5h16.5a.75.75 0 0 0 0-1.5h-.75V3.75a.75.75 0 0 0 0-1.5h-15ZM9 6a.75.75 0 0 0 0 1.5h1.5a.75.75 0 0 0 0-1.5H9Zm-.75 3.75A.75.75 0 0 1 9 9h1.5a.75.75 0 0 1 0 1.5H9a.75.75 0 0 1-.75-.75ZM9 12a.75.75 0 0 0 0 1.5h1.5a.75.75 0 0 0 0-1.5H9Zm3.75-5.25A.75.75 0 0 1 13.5 6H15a.75.75 0 0 1 0 1.5h-1.5a.75.75 0 0 1-.75-.75ZM13.5 9a.75.75 0 0 0 0 1.5H15A.75.75 0 0 0 15 9h-1.5Zm-.75 3.75a.75.75 0 0 1 .75-.75H15a.75.75 0 0 1 0 1.5h-1.5a.75.75 0 0 1-.75-.75ZM9 19.5v-2.25a.75.75 0 0 1 .75-.75h4.5a.75.75 0 0 1 .75.75v2.25a.75.75 0 0 1-.75.75h-4.5A.75.75 0 0 1 9 19.5Z"
                          clip-rule="evenodd"></path>
                </svg>
                <div class="font-poppins-semi-bold text-xl">Détails des moyens de transports</div>
            </div>
            <div class="text-sm">Retrouvez les moyens de transports choisis pour votre séjour. Seul les transports
                notifiés comme
                payés seront inclus dans le calcul du total des dépenses.
            </div>
        </div>

        <a href="{{ path('trip_transports_new', {'trip': trip.id}) }}" class="shadow rounded-3xl py-3.5 px-6 flex flex-col gap-2 items-center justify-center text-center
                          tracking-wide bg-teal-500 text-white
                                    border border-teal-300 hover:bg-teal-600
                                    transition-all duration-300 ease-in-out focus:shadow-outline focus:outline-none">
            <span class="bg-teal-400 rounded-full p-1">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                    <path fill-rule="evenodd"
                          d="M12 3.75a.75.75 0 0 1 .75.75v6.75h6.75a.75.75 0 0 1 0 1.5h-6.75v6.75a.75.75 0 0 1-1.5 0v-6.75H4.5a.75.75 0 0 1 0-1.5h6.75V4.5a.75.75 0 0 1 .75-.75Z"
                          clip-rule="evenodd"></path>
                </svg>
            </span>
            <span>Nouveau transport</span>
        </a>
    </div>

    <div class="mt-4">
        {% if trip.transports|length > 0 %}
            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4 items-start mt-4">
                {% for transport in trip.transports|sort((a, b) => a.departureDate > b.departureDate) %}
                    <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-3.5 px-6">
                        <div class="font-poppins-semi-bold text-xl">{{ transport.type.name }}</div>
                        {#                        <div class="font-poppins text-sm">{{ accommodation.address }}, #}
                        {#                            {{ accommodation.zipCode }} {{ accommodation.city }}, {{ accommodation.country }} #}
                        {#                        </div> #}

                        {% if transport.type.name != 'Transports en commun' and transport.departure %}
                            <div class="mt-4">
                                <div class="font-poppins-semi-bold">Lieu de départ</div>
                                <div class="block">{{ transport.departure }}</div>
                            </div>
                        {% endif %}

                        {% if transport.type.name != 'Transports en commun' and transport.destination %}
                            <div class="mt-4">
                                <div class="font-poppins-semi-bold">Lieu d'arrivée</div>
                                <div class="block">{{ transport.destination }}</div>
                            </div>
                        {% endif %}

                        {% if transport.type.name != 'Transports en commun' %}
                            <div class="mt-4">
                                <div class="font-poppins-semi-bold">Date et heure</div>
                                {% if transport.departureDate and transport.arrivalDate %}
                                    <div class="block">
                                        Départ le {{ transport.departureDate|date('d/m/Y à H:i') }}<br>
                                        Arrivée le {{ transport.arrivalDate|date('d/m/Y à H:i') }}
                                    </div>
                                {% else %}
                                    <div class="block">Non définies</div>
                                {% endif %}
                            </div>
                        {% endif %}

                        {% if transport.description %}
                            <div class="mt-4">
                                <div class="font-poppins-semi-bold">Description de l'offre</div>
                                <span class="block">{{ transport.description }}</span>
                            </div>
                        {% endif %}

                        {% if transport.company %}
                            <div class="mt-4">
                                <div class="font-poppins-semi-bold">Compagnie de transport</div>
                                <span class="block">{{ transport.company }}</span>
                            </div>
                        {% endif %}

                        {% if transport.type.name == 'Transports en commun' and transport.subscriptionDuration %}
                            <div class="mt-4">
                                <div class="font-poppins-semi-bold">Durée de l'abonnement</div>
                                <span class="block">{{ transport.subscriptionDuration }} jours</span>
                            </div>
                        {% endif %}

                        <div class="mt-4 flex flex-row flex-wrap gap-2 justify-center items-center">
                            <div class="rounded-full bg-body dark:bg-body-dark w-fit px-3 py-1">
                                TOTAL <span class="font-bold">{{ transport.price }}€</span>
                            </div>

                            <div class="rounded-full {{ transport.isPaid ? 'bg-green-400' : 'bg-red-400' }} w-fit text-white px-3 py-1">
                                {{ transport.isPaid ? 'Payé' : 'Non payé' }}
                            </div>
                        </div>

                        <a href="{{ path('trip_transports_edit', {'trip': trip.id, 'transport': transport.id}) }}"
                           class="block mt-4 bg-blue-500 text-white text-center py-2 px-5 rounded-full">Editer</a>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="shadow rounded-3xl bg-red-400 text-white py-3.5 px-6">
                Aucun moyen de transport n'a été trouvé pour ce voyage
            </div>
        {% endif %}
    </div>
{% endblock %}