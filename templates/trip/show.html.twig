{% extends 'base.html.twig' %}

{% block title %}{{ app_name }} - {{ trip.name }}{% endblock %}

{% block content %}
    <input id="tripId" type="hidden" value="{{ trip.id }}">
    <div class="flex flex-col md:flex-row items-start gap-4 px-4 md:px-8">
        <div class="w-full md:w-1/3 flex flex-col gap-4">
            <div class="shadow rounded-3xl bg-box dark:bg-box-dark p-3 w-full">
                <div class="w-full h-64 rounded-2xl overflow-hidden bg-no-repeat bg-cover bg-center trip-image relative
                            before:dark:opacity-60 before:opacity-40 before:absolute before:top-0
                            before:right-0 before:bottom-0 before:left-0 before:bg-black"
                     style="background-image:url({{ trip.image }});">
                    <div class="py-3 px-5 absolute bottom-2.5 left-3 text-white">
                        <div class="font-roboto text-2xl">Salut {{ app.user.firstname }}, en route pour...</div>
                        <div class="font-roboto-medium text-3xl">{{ trip.name }}</div>
                    </div>
                </div>
            </div>
            <div class="flex gap-4 flex-row w-full">
                <div class="rounded-3xl shadow bg-teal-500 text-white p-5 flex-1 flex items-center justify-center">
                    <div class="text-center">
                        <div class="font-poppins-semi-bold text-4xl">{{ trip.travelers }}</div>
                        <div class="font-poppins-semi-bold text-2xl">voyageur{{ trip.travelers > 1 ? 's' }}</div>
                        <div class="font-poppins-semi-bold text-sm">prêt{{ trip.travelers > 1 ? 's' }} à partir
                        </div>
                    </div>
                </div>
                <div class="rounded-3xl shadow bg-amber-400 text-white p-5 flex items-center justify-center">
                    <div class="text-center">
                        {% if trip.countDaysBeforeOrAfter is iterable %}
                            <div class="font-poppins-semi-bold text-4xl">{{ trip.countDaysBeforeOrAfter.days }}</div>
                            <div class="font-poppins-semi-bold text-2xl">
                                jour{{ trip.countDaysBeforeOrAfter.days > 1 ? 's' }}
                                {{ trip.countDaysBeforeOrAfter.before ? 'passé' : 'restant' }}{{ trip.countDaysBeforeOrAfter.days > 1 ? 's' }}
                            </div>
                            <div class="font-poppins-semi-bold text-sm">
                                {{ trip.countDaysBeforeOrAfter.before ? 'depuis cette aventure' : 'avant cette aventure' }}
                            </div>
                        {% else %}
                            {% if trip.countDaysBeforeOrAfter == 'ongoing' %}
                                <div class="font-poppins-semi-bold text-2xl">C'est le moment...</div>
                                <div class="font-poppins-semi-bold text-xl">Bon voyage!</div>
                            {% else %}
                                <div class="font-poppins-semi-bold text-4xl">...</div>
                                <div class="font-poppins-semi-bold text-2xl">jours restant</div>
                                <div class="font-poppins-semi-bold text-sm">avant cette aventure</div>
                            {% endif %}
                        {% endif %}

                        <div class="font-roboto text-lg mt-4">
                            {% if trip.departureDate and trip.returnDate %}
                                {{ trip.departureDate|date('j M. Y') }} - {{ trip.returnDate|date('j M. Y') }}
                            {% elseif trip.departureDate %}
                                Départ prévu le {{ trip.departureDate|date('j M. Y') }}
                            {% else %}
                                Dates de séjour non définies
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="w-full md:w-2/3 grid grid-cols-3 gap-4">
            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-3.5 px-6">
                <div class="mb-2 flex flex-row items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                        <path fill-rule="evenodd"
                              d="M2.25 13.5a8.25 8.25 0 0 1 8.25-8.25.75.75 0 0 1 .75.75v6.75H18a.75.75 0 0 1 .75.75 8.25 8.25 0 0 1-16.5 0Z"
                              clip-rule="evenodd"></path>
                        <path fill-rule="evenodd"
                              d="M12.75 3a.75.75 0 0 1 .75-.75 8.25 8.25 0 0 1 8.25 8.25.75.75 0 0 1-.75.75h-7.5a.75.75 0 0 1-.75-.75V3Z"
                              clip-rule="evenodd"></path>
                    </svg>
                    <div class="font-poppins-semi-bold text-xl">Coût du séjour</div>
                </div>
                <div class="flex justify-center gap-3 flex-wrap text-sm">
                    <div class="w-fit bg-body rounded-full px-3 py-0.5 flex flex-row items-center gap-1.5 text-black">
                        <span class="text-sm">TOTAL</span>
                        {#                        TODO #}
                        <span class="text-lg font-bold">800€</span>
                    </div>

                    <div class="flex gap-2">
                        <div class="flex items-center gap-1">
                            <div class="budget-pastille bg-teal-500"></div>
                            Payé
                        </div>
                        <div class="flex items-center gap-1">
                            <div class="budget-pastille bg-red-500"></div>
                            A payer
                        </div>
                    </div>
                </div>

                <canvas id="budgetChart" class="mx-2 mt-6 mb-2"></canvas>
            </div>
            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-3.5 px-6">
                <div class="mb-2 flex flex-row items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                        <path fill-rule="evenodd"
                              d="M7.5 6v.75H5.513c-.96 0-1.764.724-1.865 1.679l-1.263 12A1.875 1.875 0 0 0 4.25 22.5h15.5a1.875 1.875 0 0 0 1.865-2.071l-1.263-12a1.875 1.875 0 0 0-1.865-1.679H16.5V6a4.5 4.5 0 1 0-9 0ZM12 3a3 3 0 0 0-3 3v.75h6V6a3 3 0 0 0-3-3Zm-3 8.25a3 3 0 1 0 6 0v-.75a.75.75 0 0 1 1.5 0v.75a4.5 4.5 0 1 1-9 0v-.75a.75.75 0 0 1 1.5 0v.75Z"
                              clip-rule="evenodd"></path>
                    </svg>
                    <div class="font-poppins-semi-bold text-xl">Dépenses</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('showTrip') }}
{% endblock %}