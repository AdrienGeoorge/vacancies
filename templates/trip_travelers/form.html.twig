{% extends 'trip/base.html.twig' %}

{% block bodyTrip %}
    {{ form_start(form) }}
    <div class="flex flex-col gap-4 w-full">
        <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-6 px-8">
            <div class="text-2xl font-poppins-semi-bold">
                Quel est le nom du voyageur ?
            </div>
            <div class="mb-5 text-sm font-poppins">
                Entre le prénom et le nom de la personne qui prendra part à ce voyage.
            </div>
            {{ form_widget(form.name) }}

            <button class="mt-5 tracking-wide bg-teal-500 border-2 border-teal-400 text-white w-full py-4
                                    rounded-full flex items-center justify-center hover:bg-teal-700
                                    transition-all duration-300 ease-in-out
                                    focus:shadow-outline focus:outline-none">
                Enregistrer
            </button>
            {% if traveler.id %}
                <a href="{{ path('trip_traveler_delete', {'trip': trip.id, 'traveler': traveler.id}) }}"
                   class="tracking-wide bg-red-500 border-2 mt-4 border-red-400 text-white py-4 px-7 rounded-full
                                    flex items-center justify-center hover:bg-red-700
                                    transition-all duration-300 ease-in-out
                                    focus:shadow-outline focus:outline-none">
                    Supprimer
                </a>
            {% endif %}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}