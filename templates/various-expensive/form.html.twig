{% extends 'trip/base.html.twig' %}

{% block bodyTrip %}
    {{ form_start(form) }}
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 px-4 md:px-8">
        <div class="col-1 flex flex-col gap-4">
            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-6 px-8">
                <div class="text-2xl font-poppins-semi-bold">
                    Nom de la dépense
                </div>
                <div class="mb-5 text-sm font-poppins">
                    De quel type de dépense supplémentaire sagit-il ?
                </div>
                {{ form_widget(form.name) }}
            </div>

            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-6 px-8">
                <div class="text-2xl font-poppins-semi-bold">
                    Description de la dépense
                </div>
                <div class="mb-5 text-sm font-poppins">
                    Renseignes les formalités sur cette dépense.<br>
                </div>
                {{ form_widget(form.description) }}
            </div>
        </div>

        <div class="col-2 flex flex-col gap-4">
            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-6 px-8">
                <div class="text-2xl font-poppins-semi-bold">
                    Informations tarifaires
                </div>
                <div class="mb-5 text-sm font-poppins">
                    Renseignes le montant de la dépense. Par défaut le prix saisi correspond au montant total.
                </div>
                <div class="flex flex-col md:flew-row gap-4">
                    {{ form_widget(form.price) }}
                </div>

                <div class="flex gap-4 mt-4 items-center">
                    <div class="flex-1">
                        <div class="text-sm font-poppins">
                            Cochez la case ci-contre si le prix de cette dépense est <b>par personne</b>.
                        </div>
                    </div>
                    {{ form_widget(form.perPerson) }}
                </div>
            </div>

            <div class="shadow rounded-3xl bg-box dark:bg-box-dark py-6 px-8">
                <div class="text-2xl font-poppins-semi-bold">
                    Achat
                </div>
                <div class="flex gap-4 items-center">
                    <div class="flex-1">
                        <div class="text-sm font-poppins">
                            Cochez la case ci-contre si vous avez déjà effectué cette dépense.
                        </div>
                    </div>
                    {{ form_widget(form.paid) }}
                </div>
            </div>

            <div class="flex gap-4 flex-wrap justify-center">
                <button class="tracking-wide bg-teal-500 border-2 border-teal-400 text-white py-4 px-7 rounded-full
                                    flex items-center justify-center hover:bg-teal-700
                                    transition-all duration-300 ease-in-out
                                    focus:shadow-outline focus:outline-none">
                    Enregistrer
                </button>
                {% if expensive.id %}
                    <a href="{{ path('trip_various_expensive_delete', {'trip': trip.id, 'expensive': expensive.id}) }}"
                       class="tracking-wide bg-red-500 border-2 border-red-400 text-white py-4 px-7 rounded-full
                                    flex items-center justify-center hover:bg-red-700
                                    transition-all duration-300 ease-in-out
                                    focus:shadow-outline focus:outline-none">
                        Supprimer
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
{% endblock %}